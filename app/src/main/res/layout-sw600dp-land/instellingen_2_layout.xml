<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <CheckBox
                android:text="Eigenaar"
                android:id="@+id/klantIsEigenaar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:checked="false"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <TextView
                android:text="Naam:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"/>

            <EditText
                android:id="@+id/txtNaamKlant"
                android:layout_width="@dimen/edittext_width_small"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginLeft="71dp"/>

            <TextView
                android:text="Voornaam:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"/>

            <EditText
                android:id="@+id/txtVoornaamKlant"
                android:layout_width="@dimen/edittext_width_small"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <TextView
                android:text="Gemeente:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"/>

            <EditText
                android:id="@+id/txtGemeenteKlant"
                android:layout_width="@dimen/edittext_width_small"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginLeft="27dp"/>

            <TextView
                android:text="Postcode:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"/>

            <EditText
                android:id="@+id/txtPostcodeKlant"
                android:layout_width="@dimen/edittext_width_small"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginLeft="34dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp">

            <TextView
                android:text="Straat:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"/>

            <EditText
                android:id="@+id/txtStraatKlant"
                android:layout_width="@dimen/edittext_width_small"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginLeft="71dp"/>

            <TextView
                android:text="Nr:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"/>

            <EditText
                android:id="@+id/txtNrKlant"
                android:layout_width="@dimen/edittext_width_small"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginLeft="112dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnFragKeuze"
                android:text="Bevestig"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PLACEHOLDER TEXT : MAX 70 LIJNEN"
        android:id="@+id/txtResultaat"
        android:maxLines = "60"
        android:textSize="25sp"
        android:scrollbars = "vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/btnWijzigen"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wijzigingen"
        android:id="@+id/btnWijzigen"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_below="@id/txtResultaat"
    android:gravity="center_horizontal"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KIES REEKS"
        android:layout_marginEnd="25dp"
        android:id="@+id/btnKiesReeks" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verzenden"
        android:layout_marginStart="25dp"
        android:id="@+id/btnVerzenden"/>
</LinearLayout>

</RelativeLayout>
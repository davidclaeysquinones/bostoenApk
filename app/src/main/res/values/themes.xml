<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:name="http://schemas.android.com/tools" xmlns:android="urn:oasis:names:tc:xliff:document:1.2">
    <style name="ThemeBostoen" parent="android:Theme">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:colorForeground">#e3000b</item>
        <item name="android:colorBackground">#ffffffff</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowBackground">@color/background</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:listViewStyle">@style/listViewStyle</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <item name="android:buttonStyle">@style/button_style</item>
        <item name="android:textSize">20dp</item>


</style>


    <style name="WindowTitleBackground">
        <item name="android:background">#e3000b</item>
    </style>



    <style name="RobotoTextViewStyle">
        <item name="android:fontFamily">"fonts/Robot-Regular"</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="button_style">
        <item name="android:fontFamily">"fonts/Robot-Regular"</item>
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/costum_button_red</item>

    </style>


    <style name="btnStyle">
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#000000</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >30dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowColor" >#000000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >2</item>
        <item name="android:colorBackground">#e3000b</item>

    </style>

    <style name="listViewStyle" parent="android:style/Widget.ListView">
        <item name="android:background">#ffffff</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="radiobutton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/selectr</item>
        <item name="android:textColor">#000000</item>
    </style>



    <color name="background">#ffffffff</color>
</resources>